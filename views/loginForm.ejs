<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel='stylesheet' href='/stylesheets/form.css' />
</head>
<body>
    <h1 class="login-title">Login</h1>
    <form class="login-form" action="" method="POST" autocomplete="off">
        <% for (let err of errors) { %>
            <p class="error-message"><%= err %></p>
        <% } %>
        <label class="login-email-label" for="email">Email</label>
        <input class="login-email"type="email" name="email" placeholder="Email" required>
        <label class="login-password-label" for="password">Password</label>
        <input class="login-password" type="password" name="password" placeholder="Password" required>
        <button class="login-button">Log In</button>
    </form>
</body>
</html>